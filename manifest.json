{
  "manifest_version": 3,
  "name": "BT hyperlinks",
  "version": "1.0",
  "description": "Converts plain text SO/PU numbers into hyperlinks and popup windows to new tabs",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/linker.js",
        "scripts/tpm.js",
        "scripts/windowRedirect.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
